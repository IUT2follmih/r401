{% extends 'base.html.twig' %}

{% block title %}
	Recherche
{% endblock %}

{% block body %}
	<div class="card col-md-12">
		<div class="card-header">
			<h3>
				<i class="fas fa-search"></i>
				<p>Recherche "" </p>
			</h3>
		</div>

		<div class="card-body row">
			{% for item in items %}
				<div class="col-md-3">
					<div class="card clickable" onclick="location = '{{ path('app_boutique_recherche') }}'">
						<img src="{{ asset(item.visuel) }}" class="card-img-top" alt="Logo Boutique"/>
						<div class="card-body">
							<h2>{{ item.libelle }}</h2>
							<p class="card-text">
								{{ item.texte }}
							</p>
							<h2>
								<span class="badge badge-primary">
									<i class="fas fa-cart-plus">{{item.prix}}
