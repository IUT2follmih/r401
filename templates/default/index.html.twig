{% extends 'base.html.twig' %}

{% block title %}
	{{ 'default.index.title' | trans }}
{% endblock %}

{% block body %}
	<div class="card col-md-12">
		<div class="card-header">
			<h3>
				<i class="fas fa-home"></i>
				 {{ 'default.index.boutique' | trans }}
			</h3>
		</div>
		<div class="card-body">
			<div class="card clickable" onclick="location = '{{ path('app_boutique') }}'">
				<img src="{{asset("images/epicerie.jpg") }}" class="card-img-top" alt="Logo Boutique"/>
				<div class="card-body">
					<p class="card-text">
						<i>{{ 'default.index.text' | trans }}</i>
					</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
