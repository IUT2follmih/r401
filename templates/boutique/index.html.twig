{% extends 'base.html.twig' %}

{% block title %}	
    {{ 'default.boutique.title' | trans }}
{% endblock %}

{% block body %}

    <div class="card col-md-12">
        <div class="card-header">
            <h3>
                <i class="fas fa-store"></i>
                {{ 'boutique.index.boutique' | trans }} : <span class="badge badge-pill badge-info">{{categories|length}}</span> {{ 'boutique.index.rayon' | trans }}(s)
            </h3>
        </div>
        <div class="card-body row">
            {% for item in categories %}
                <div class="col-md-3">
                    <div class="card clickable" onclick="location ='{{ path('app_boutique_rayon', {'idCategorie':item.id})}}'">
                    <img src="{{ asset(item.visuel) }}" class="card-img-top" alt="Logo categorie"/>
                    <div class="card-body">
                        <h2>{{item.libelle}}</h2>
                        <p class="card-text">
                            <i>{{item.texte}}</i>
                        </p>
                    </div>
                </div>
            </div>
            
            {% endfor %}
        </div>
    </div>

{% endblock %}
