{% extends 'base.html.twig' %}

{% block title %}Hello BoutiqueController!
{% endblock %}

{% block body %}
	<div class="card col-md-12">
		<div class="card-header">
			<h3>
				<i class="fas fa-home"></i>
				Boutique R4.01
			</h3>
		</div>

		<div class="card-body row">
			{% for categories in boutiques %}
				<div class="col-md-3">
					<div class="card clickable">
						<div class="card clickable" onclick="location = '/rayon/{{ categorie.id }}'">
							<img src="/{{ categories.visuel }}" class="card-img-top" alt="Logo Boutique"/>
							<div class="card-body">
								<h2>{{ categories.libelle }}</h2>
								<p class="card-text">
									{{ categories.text }}
								</p>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endblock %}
